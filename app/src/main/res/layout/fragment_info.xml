<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
